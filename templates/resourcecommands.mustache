{{!
    @template local_sharedresource/resourcebody

    Used when a resource is setup as popuped but accessed directly

    Classes required for JS:
    * mod/sharedresource/amd/view.js

}}
<!-- resourcecommands -->
<div class="generalbox sharedresources-commands">

{{#isremote}}
    <form name="add{{i}}" action="{{formurl}}" style="display:inline">
{{/isremote}}

{{^isremote}}
    <form name="add{{i}}" action="{{formurl}}" style="display:inline" method="POST" >
{{/isremote}}

<input type="hidden" name="id" value="{{courseid}}" />
<input type="hidden" name="mode" value="shared" />
<input type="hidden" name="section" value="{{section}}" />
<input type="hidden" name="identifier" value="{{identifier}}" />
<input type="hidden" name="description" value="{{quoteddesc}}" />
<input type="hidden" name="title" value="{{quotedtitle}}" />
<input type="hidden" name="provider" value="{{repo}}" />
<input type="hidden" name="file" value="{{file}}" />
<input type="hidden" name="url" value="{{url}}" />
</form>

{{^isltitool}}
<a id="id-shared-{{i}}">{{addtocoursestr}}</a>

{{#islocalizable}}
 - <a id="id-local-{{i}}" class="sharedresource-actionlink">{{localizetocoursestr}}</a>
{{/islocalizable}}
{{/isltitool}}

{{#isltitool}}
 - <a id="id-ltiinstall-{{i}}" class="sharedresource-actionlink">{{installtoolstr}}</a>
{{/isltitool}}

{{#isdeployable}}
 - <a id="id-deploy-{{i}}" class="sharedresource-actionlink">{{deployincoursestr}}</a>
{{/isdeployable}}

{{#isvideo}}
 - <a id="id-mplayerdeploy-{{i}}" class="sharedresource-actionlink">{{deployinmplayerstr}}</a>
{{/isvideo}}

</div>
<!-- /resourcecommands -->
