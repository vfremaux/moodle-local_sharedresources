{{!
    @template local_sharedresource/category

    Shows displayes rendering of a a resource category level

    Classes required for JS:
    * none

}}
<!-- resourcecategory -->
<div class="browser-{{current}}-category row-fluid">

{{#hasup}}
    <div class="browser-'.$current.'-category-label span2">
        <a href="{{parentcaturl}}"><img src="{{upiconurl}}" class="sharedresource-browse-up"></a>
    </div>
{{/hasup}}

    <div class="browser-{{current}}-category-info span{{catspan}}">
        {{#issub}}
        <a href="{{caturl}}">{{catname}}</a>
        {{/issub}}
        {{^issub}}
            {{catname}}
        {{/issub}}
    </div>

    <div id="sharedresource-browser-cat{{catid}}" class="browser-{{current}}-category-count span1"></div>

</div>
<!-- /resourcecategory -->
