{{!
    @template local_sharedresource/searchform_tableless

    Shows a library search form with search widgets.

    Classes required for JS:
    * none

}}
<!-- local_sharedresources/searchform_simple -->

<div id="search-form">
<form name="cat" action="{{formurl}}" style="display:inline">
{{#courseid}}
<input type="hidden" name="course" value="{{courseid}}">
{{/courseid}}
{{#section}}
<input type="hidden" name="section" value="{{section}}">
{{/section}}
{{#return}}
<input type="hidden" name="return" value="{{return}}">
{{/return}}

<input type="hidden" name="repo" value="{{repo}}">
<input type="hidden" name="offset" value="{{offset}}">

<div class="inner-block" id="sharedresource-search-button">
    <div class="content">
        <center>
        <input type="submit" name="go" value="{{searchstr}}" />
        </center>
    </div>
</div>

<div class="inner-block" >
    <input name="simplesearch" type="text" />
</div>

<div class="inner-block" id="sharedresource-search-advanced">
    <div class="content">
        <center>
        <a href="{{{browseurl}}}">{{#str}}advancedsearch, local_sharedresources{{/str}}</a>
        </center>
    </div>
</div>

</form>
</div>
<!-- /local_sharedresources/searchform_simple -->
