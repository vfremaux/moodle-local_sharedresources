{{!
    @template local_sharedresource/search/freetext

    Shows displayes rendering of a text input

    Classes required for JS:
    * none

}}
<!-- search_freetext -->
<div class="header">
    <h2>{{widgetname}} {{{textsearchhelpicon}}}</h2>
</div>
<div class="content">
    <select name="{{label}}_option">
        <option value="includes" {{{includesselected}}} >{{containsstr}}</option>
        <option value="equals" {{{equalsselected}}} >{{equaltostr}}</option>
        <option value="beginswith" {{{beginswithselected}}} >{{startswithstr}}</option>
        <option value="endswith" {{{endswithselected}}} >{{endswithstr}}</option>
    </select>
    <input type="text" name="{{label}}" value="{{value}}"/>
</div>
<!-- /search_freetext -->